<h1>Update Race: {{this.race_name}}</h1>

<div>
  <form>
    <fieldset>
      <legend><h3>Enter new information for {{this.race_name}}</h3></legend>
        <label for="character_name">Race Name:
          <input type="text" class="inputField" name="race_name" id="race_name" size="10" maxlength="10" value="{{this.race_name}}">
        </label>
        <br/>

        <label for="lifespan">Lifespan (years):
          <input type="number" class="inputField" name="lifespan" id="lifespan" min="-1" value="{{this.lifespan}}">
        </label>
        <br/>

        <label for="height">Height (meters):
          <input type="number" class="inputField" name="height" id="height" min="0" step="0.01" value="{{this.height}}">
        </label>
        <br/>

        <label for="weight">Weight (kilograms):
          <input type="number" class="inputField" name="weight" id="weight" min="0" step="0.01" value="{{this.weight}}">
        </label>
        <br/>

        <label for="speed">Speed:
          <input type="number" class="inputField" name="speed" id="speed" min="0" step="0.01" value="{{this.speed}}">
        </label>
        <br/>

        <label for="special_select">Special:</label>
        <select id="special_select">
              <option value="">--Select a special attribute--</option>
              {{#each specials}}
              <option value="{{specialId}}">{{special}}</option>
              {{/each}}
          </select>
          <br/>

        <input type="submit" value="Update Race" id="updateRace" class="btn">
    </fieldset>
  </form>
</div>

<a href="/">Home</a>