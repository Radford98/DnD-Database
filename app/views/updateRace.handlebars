<h1>Update Race: {{race.race_name}}</h1>

<div>
  <form id="updateRace">
    <fieldset>
      <legend><h3>Enter new information for {{race.race_name}}</h3></legend>
        <label for="race_name">Race Name:
          <input type="text" class="inputField" name="race_name" id="race_name" size="10" maxlength="10" value="{{race.race_name}}" required>
        </label>
        <br/>

        <label for="lifespan">Lifespan (years):
          <input type="number" class="inputField" name="lifespan" id="lifespan" min="-1" value="{{race.lifespan}}" required>
        </label>
        <br/>

        <label for="height">Height (meters):
          <input type="number" class="inputField" name="height" id="height" min="0" step="0.01" value="{{race.height}}" required>
        </label>
        <br/>

        <label for="weight">Weight (kilograms):
          <input type="number" class="inputField" name="weight" id="weight" min="0" step="0.01" value="{{race.weight}}" required>
        </label>
        <br/>

        <label for="speed">Speed:
          <input type="number" class="inputField" name="speed" id="speed" min="0" step="0.01" value="{{race.speed}}" required>
        </label>
        <br/>
        <br/>

        <h3>Special Attributes</h3>
        <ul>
          {{#each race.raceSpecials}}
          <li> {{this}} </li>
          {{/each}}
        </ul>

        <button onclick="updateRow('Races', {{race.race_id}}, '#updateRace')">Update</button>
    </fieldset>
  </form>

  <form id="addSpecial" action="/manageRaces/{{race.race_id}}" method="post">
    <fieldset>
        <label for="special_select">Choose special to add:</label>
        <select id="special_select" name="special_select" required>
              <option value="">--Select a special attribute--</option>
              {{#each specials}}
              <option value="{{specialId}}">{{specialName}}</option>
              {{/each}}
          </select>
          <br/>

          <input type="submit" value="Add Special" id="addSpecial" class="btn">
    </fieldset>
  </form>
</div>