<h1>Manage Races</h1>
<div class="page_desc">
    <p>This page allows you to</p>
    <ul>
        <li>Add a race</li>
        <li>Edit race attributes</li>
        <li>Assign race special attributes</li>
    </ul>
</div>

<div>
  <form id="addRace" action="/manageRaces" method="post">
    <fieldset>
      <legend><h3>Add a race</h3></legend>
        <label for="race_name">Race Name:
          <input type="text" class="inputField" name="race_name" id="race_name" size="10" maxlength="10" required>
        </label>
        <br/>

        <label for="lifespan">Lifespan (years):
          <input type="number" class="inputField" name="lifespan" id="lifespan" min="-1" required>
        </label>
        <br/>

        <label for="height">Height (meters):
          <input type="number" class="inputField" name="height" id="height" min="0" step="0.01" required>
        </label>
        <br/>

        <label for="weight">Weight (kilograms):
          <input type="number" class="inputField" name="weight" id="weight" min="0" step="0.01" required>
        </label>
        <br/>

        <label for="speed">Speed:
          <input type="number" class="inputField" name="speed" id="speed" min="0" step="0.01" required>
        </label>
        <br/>

        <label for="special_select">Special:</label>
        <select id="special_select" name="special_select">
              <option value="">--Select a special attribute--</option>
              {{#each specials}}
                 <option value="{{specialId}}">{{specialName}}</option>
              {{/each}}
          </select>
          <br/>

        <input type="submit" value="Add Race" id="addRace" class="btn">
    </fieldset>
  </form>
</div>

<div id="raceTable">
  <h1>Races</h1>
    <table>
      <thead>
        <tr>
          <th hidden></th>
          <th> Race Name </th>
          <th> Lifespan </th>
          <th> Height </th>
          <th> Weight </th>
          <th> Speed </th>
          <th> Specials </th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        {{#each races}}
          <tr>
              <td hidden> {{this.id}} </td>
              <td> {{this.raceName}} </td>
              <td> {{this.lifespan}} </td>
              <td> {{this.height}} </td>
              <td> {{this.weight}} </td>
              <td> {{this.speed}} </td>
              <td>
                  <ul>
                   {{#each this.specials}}
                     <li> {{this}} </li>
                   {{/each}}
                  </ul>
              </td>
              <td>
                  <form action="/manageRaces/{{id}}" method="get">
                      <input type="submit" value="Update" />
                  </form>
              </td>
              <td><button onclick="deleteRow('Races', {{id}})">Delete</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
</div>