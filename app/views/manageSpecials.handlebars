<h1>Manage Special Attributes</h1>
<div class="page_desc">
    <p>This page allows you to</p>
    <ul>
        <li>Add a special attribute</li>
        <li>Edit a special attribute</li>
    </ul>
</div>

<div>
  <form id="addSpecial">
    <fieldset>
      <legend><h3>Add a special attribute</h3></legend>
        <!-- This is for demo purposes. Production will populate lists from
        database -->
        <label for="special_name">Special Name:
          <input type="text" class="inputField" name="special_name" id="special_name" size="75" maxlength="50" required>
        </label>
        <br/>

        <label for="special_description">Special Description:</label>
          <textarea id="special_description" name="special_description"
                    rows="5" cols="30" maxlength="255" form="addSpecial"
                    required></textarea>
        <br/>

        <input type="submit" value="Add Special" id="addSpecial" class="btn">
    </fieldset>
  </form>
</div>

<div id="specialTable">
  <h1>Special Attributes</h1>
    <table>
      <thead>
        <tr>
          <th hidden></th>
          <th> Special Name </th>
          <th> Special Description </th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        {{#each specials}}
        <tr>
          <td hidden> {{this.id}} </td>
          <td> {{this.specialName}} </td>
          <td> {{this.specialDesctription}} </td>
          <td>
            <form>
              <input type="submit" value="Update" class="btn">
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
</div>
<a href="/">Home</a>